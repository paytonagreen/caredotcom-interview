<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<header>
  <h1 class="fake-logo">
    Events Page
  </h1>
</header>

<body>
    <h2 class="page-headline">Our Best Events</h2>

    <div class="card-container">
      <% @series.each do |event| %>
        <%= render partial: "card", locals: { event: event, event_type: 'series', location: @location } %>
      <% end %>
      <% @activities.each do |event| %>
        <%= render partial: "card", locals: { event: event, event_type: 'activity', location: @location } %>
      <% end %>
    </div>
</body>
